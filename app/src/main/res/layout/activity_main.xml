<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:text="Currency Converter"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#174218"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/takaET"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#948787"
        android:background="#FFFFFF"
        android:layout_marginBottom="15dp"
        android:hint="Enter amount of currency in BD:"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <Button
        android:id="@+id/convertBtn"
        android:text="Convert"
        android:onClick="convert"
        android:background="#4BEB13"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:background="#FFFFFF"
        android:layout_height="40dp">
        <LinearLayout

            android:weightSum="1"

            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/showTakaTV"
                android:textSize="25sp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="taka(BD)=?"
                android:textSize="25sp"
                android:textColor="#020202"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dollar"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#88C4CA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultTV1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Rupi"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#88C4CA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultTV2"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_height="40dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Pound"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#88C4CA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultTV3"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dinar"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#88C4CA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultTV4"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:weightSum="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dirham"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#88C4CA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultTV5"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>